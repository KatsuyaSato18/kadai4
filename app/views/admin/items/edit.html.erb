<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-10 px-5 py-5 px-sm-0 ">
      <div class="form-group row">
        <span class="bg-light px-2 h4 mb-3">商品編集</span>
      </div>
      <%= form_with(model: @item, url: admin_item_path(@item), method: :patch) do |f| %>
        <div class="form-group row">
          <label class="col-3 col-form-label">商品画像</label>
          <div class="col-4">
            <%= f.file_field :image, accept: "image/*", class:"form-control" ,id:"inputImage" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-3 col-form-label">商品名</label>
          <div class="col-4">
            <%= f.text_field :name, class:"form-control",placeholder: "商品名", id:"inputName" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-3 col-form-label">商品説明</label>
          <div class="col-4">
            <%= f.text_area :introduction, class:"form-control", placeholder: "ここに説明文を記述します", id:"inputIntroduction", rows: 5 %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-3 col-form-label">税抜価格</label>
          <div class="col-4 d-flex align-items-center">
            <%= f.text_field :price, class:"form-control", placeholder: "1000", id:"inputPrice" %>
            <span class="ml-2">円</span>
          </div>
        </div>
        <div class="form-group row text-center ">
          <div class="col-6">
            <%= f.submit "変更を保存", class:"btn btn-success" %>
          </div>
        </div>
      <% end %>
  　</div>
  </div>
</div>
