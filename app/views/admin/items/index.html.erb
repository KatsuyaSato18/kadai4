<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-8 col-lg-8 px-5 py-5 px-sm-0 ">
      <div class="d-flex justify-content-between align-items-center">
        <div class="form-group row">
        <span class="bg-light px-2 h4 mb-3">商品一覧</span>
        </div>
        <%= link_to new_admin_item_path, class: "btn" do %>
        <i class="fas fa-plus-circle fa-3x" style="color: #d4d6d8;"></i>
        <% end %>

      </div>
      <table class="table mt-4 border-bottom">
        <thead>
          <tr>
            <th class="bg-light">商品ID</th>
            <th class="bg-light">商品名</th>
            <th class="bg-light">税抜価格</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name , admin_item_path(item.id), class: "text-dark text-decoration-underline"%></td>
              <td><%= number_with_delimiter(item.price) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="field row mt-4 d-flex justify-content-center">
        <div class="d-inline-block mx-auto">
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
</div>
