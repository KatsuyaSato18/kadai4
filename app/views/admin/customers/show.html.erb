<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-10 px-5 py-5 px-sm-0 ">
      <div class="form-group row">
        <span class="bg-light px-2 h4 mb-3"><%= "#{@customer.last_name}#{@customer.first_name}" %>さんの会員詳細</span>
      </div>
      <div class="form-group row"> <!-- こちらの全角スペースを削除しました -->
          <label class="col-3 col-form-label">会員ID</label>
          <div class="col-4">
            <%= @customer.id %>
          </div>
      </div>
      <div class="form-group row"> <!-- こちらの全角スペースを削除しました -->
          <label class="col-3 col-form-label">氏名</label>
          <div class="col-6">
            <%= "#{@customer.last_name} #{@customer.first_name}" %>
          </div>
      </div>
        <div class="form-group row">
          <label class="col-3 col-form-label">フリガナ</label>
          <div class="col-8">
            <%= "#{@customer.last_name_kana} #{@customer.first_name_kana}" %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-3 col-form-label">郵便番号</label>
          <div class="col-4">
            <%= @customer.postal_code %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-3 col-form-label">住所</label>
          <div class="col-9">
            <%= @customer.address %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-3 col-form-label">電話番号</label>
          <div class="col-4">
            <%= @customer.telephone_number %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-3 col-form-label">メールアドレス</label>
          <div class="col-4">
            <%= @customer.email %>
          </div>
        </div>
        <div class="form-group row">
          <label class="col-3 col-form-label">ステータス</label>
          <div class="col-4">
            <% if !@customer.is_deleted %>
            <span class="text-success font-weight-bold">有効</span>
            <% else %>
            <span class="text-muted font-weight-bold">退会</span>
            <% end %>
          </div>
        </div>
        <div class="form-group row text-center">
          <div class="col-4">
            <a href="<%= edit_admin_customer_path %>" class="btn btn-success">編集する</a>
          </div>
          <div class="col-4">
            <a href="<%= admin_order_path %>" class="btn btn-primary">注文履歴一覧を見る</a>
          </div>
        </div>
  　</div>
  </div>
</div>
